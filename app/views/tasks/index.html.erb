<h1>My Tasks</h1>

<ul style="list-style-type: none">
  <% @tasks.each do |task| %>
  <li>
    <% if task[:completed] %>
      <input type="checkbox" checked disabled>
    <% else %>
      <input type="checkbox" disabled>
    <% end %>
    <%= link_to task[:title], task_path(task) %>
  </li>
  <% end %>
</ul>

<hr>

<%= link_to "Add a new task", new_task_path %>
